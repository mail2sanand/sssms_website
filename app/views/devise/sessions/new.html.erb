<h2>Log in</h2>
  <br>


<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field">

    <%= f.label :email %><br />
    <input type="email" size="40" name="user[email]" class="input_login"/>
  </div>
  <br>

  <div class="field">
    <%= f.label :password %><br />
    <input class="input_login" type="password" size="25" name="user[password]" id="user_password" autocomplete="off"/>
  </div>

  <br>
  <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end %>

  <br>
  <div class="actions">
    <input id="comment_submit" name="commit" src="/assets/login.png" type="image" value="Login" style="width: 100px;height: 30px;" />
  </div>
<% end %>

<%= render "devise/shared/links" %>
